/* pages/order/order.wxss */
.order{
  position: relative;
  width: 100%;
  height: 150rpx;
  margin-bottom: 50rpx;
  background-color: #fff;
  box-shadow:10rpx 10rpx 6rpx 4rpx #eee;
}
.img{
  width:130rpx ;
  height: 130rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.total{
  float: left;
  font-size: 28rpx;
  line-height: 150rpx;
  margin-left: 10rpx;
}
.price{
  position: absolute;
  right:30rpx;
  top: 20rpx;
  font-weight: bold;

}
.done{
  position: absolute;
  right: 160rpx;
  bottom: 10rpx;
  color: red;
  font-size: 32rpx;
}
.van-button--default{
  float: right;
  top: 90rpx;
}
.empty{
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
  color: #888;
}