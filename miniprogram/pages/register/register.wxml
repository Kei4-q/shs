<view class="all">
<van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="用户名"
    placeholder="请输入用户名"
    bind:blur="onChangeusername"
  />
  <van-field
    value="{{phone}}"
    required
    clearable
    label="手机号"
    placeholder="请输入手机号"
    bind:blur="onChangetel"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    bind:blur="onChangepsd"
  />
  <van-field
    value="{{ password_again }}"
    type="password"
    label="确认密码"
    placeholder="请再次输入密码"
    required
    bind:blur="onChangepsd_again"
  />
</van-cell-group>
<van-button color="linear-gradient(to right, #4bb0ff, #6149f6)" size="large" bindtap="registerClick">注册</van-button>
</view>